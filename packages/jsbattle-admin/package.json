{
  "name": "jsbattle-admin",
  "version": "2.7.1",
  "description": "",
  "main": "index.js",
  "watch": {
    "build:dev": {
      "patterns": [
        "src/**/*.*"
      ],
      "verbose": true
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src/",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "npm run test:prep && npm run test:run-all && npm run test:mock-stop",
    "watch": "npm-watch",
    "serve": "node ./mock/server.js",
    "serve:slow": "node ./mock/server.js 700",
    "test:run-all": "cucumber-js -f ./features/support/SimpleFormatter.js --retry 3",
    "test:mock-start": "pm2 start ./mock/server.js --wait-ready --name jsbattle-mock-server-admin -- -noauth",
    "test:mock-stop": "pm2 del jsbattle-mock-server-admin",
    "test:prep": "(npm run test:mock-stop > /dev/null 2>&1 || true) && npm run test:mock-start"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "cucumber": "^6.0.5",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "json-server": "^0.16.0",
    "lodash": "^4.17.15",
    "npm-watch": "^0.6.0",
    "pm2": "^4.2.3",
    "puppeteer": "^2.1.1",
    "randomstring": "^1.1.5",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-brands-svg-icons": "^5.12.1",
    "@fortawesome/free-regular-svg-icons": "^5.12.1",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^4.4.1",
    "express": "^4.17.1",
    "jquery": "^3.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  }
}
