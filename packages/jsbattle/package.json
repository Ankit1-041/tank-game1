{
  "name": "jsbattle",
  "version": "2.7.1",
  "description": "",
  "main": "dist/js/jsbattle.min.js",
  "scripts": {
    "start": "./dist/jsbattle.js start ...",
    "clean": "rimraf dist && rimraf test/features*",
    "build": "npm run build:server && npm run build:webpage && npm run build:admin",
    "build:admin": "cpx './node_modules/jsbattle-admin/dist/**/*' ./dist/public/admin",
    "build:webpage": "cpx './node_modules/jsbattle-webpage/dist/**/*' ./dist/public",
    "build:server": "cpx './src/**/*' ./dist",
    "test": "npm run test:prep && npm run test:run-all && npm run test:server-stop",
    "test:copy-webpage": "cpx './node_modules/jsbattle-webpage/features/**/*' ./test/features-webpage",
    "test:copy-admin": "cpx './node_modules/jsbattle-admin/features/**/*' ./test/features-admin",
    "test:server-start": "pm2 start './dist/jsbattle.js' --wait-ready --name jsbattle-test-server -- start -c ./test/jsbattle.config.json",
    "test:server-stop": "pm2 del jsbattle-test-server",
    "test:run-all": "npm run test:run-webpage && npm run test:run-admin",
    "test:run-webpage": "cucumber-js -t @integration --retry 3 -f ./test/features-webpage/support/SimpleFormatter.js --world-parameters '{\"port\": 8100}' ./test/features-webpage",
    "test:run-admin": "cucumber-js -t @integration --retry 3 -f ./test/features-admin/support/SimpleFormatter.js --world-parameters '{\"port\": 8100}' ./test/features-admin",
    "test:prep": "(npm run test:server-stop > /dev/null 2>&1 || true) && npm run test:server-start && npm run test:copy-webpage && npm run test:copy-admin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamro/jsbattle"
  },
  "author": "Krzysztof Jamroz <jamro@jamro.net>",
  "license": "MIT",
  "bin": {
    "jsbattle": "./dist/jsbattle.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "cucumber": "^6.0.5",
    "pm2": "^4.2.3",
    "puppeteer": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "jsbattle-docs": "^2.7.1",
    "jsbattle-engine": "^2.7.0",
    "jsbattle-server": "^2.7.0",
    "jsbattle-webpage": "^2.7.1",
    "jsbattle-admin": "^2.7.1",
    "lodash": "^4.17.15",
    "path": "^0.12.7",
    "yargs": "^15.1.0"
  },
  "gitHead": "b086d7f5befb0506cc4f1ef9a6450cf2591b9b7d"
}
