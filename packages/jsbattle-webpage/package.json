{
  "name": "jsbattle-webpage",
  "version": "2.7.1",
  "description": "",
  "main": "index.js",
  "watch": {
    "build:bundle": {
      "patterns": [
        "src/**/*.*"
      ],
      "verbose": true
    },
    "build:copy": {
      "patterns": [
        "static/**/*.*"
      ],
      "verbose": true
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src/",
    "build": "npm run build:copy && npm run build:bundle",
    "build:copy": "build/copy-libs.js",
    "build:bundle": "webpack --config ./webpack.config.js --mode=production",
    "test": "npm run test:prep && npm run test:run-all && npm run test:mock-stop",
    "test:smoke": "npm run test:prep && npm run test:run-smoke && npm run test:mock-stop",
    "test:mock-start": "pm2 start mockserver/mock.js --wait-ready --name jsbattle-mock-server",
    "test:mock-stop": "pm2 del jsbattle-mock-server",
    "test:run-all": "cucumber-js -f ./features/support/SimpleFormatter.js --retry 3",
    "test:run-smoke": "cucumber-js -t @smoke -f ./features/support/SimpleFormatter.js --retry 3",
    "test:prep": "(npm run test:mock-stop > /dev/null 2>&1 || true) && npm run test:mock-start",
    "analyse": "webpack --profile --json --config ./webpack.config.js > bundle_stats.json && webpack-bundle-analyzer bundle_stats.json",
    "watch": "npm-watch",
    "start": "http-server -c-1 ./dist",
    "start:dev": "webpack-dev-server --config ./webpack.config.js --mode=production"
  },
  "keywords": [],
  "author": "Krzysztof Jamroz <jamro@jamro.net>",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "ajv": "^6.10.2",
    "bootstrap": "^4.3.1",
    "clipboard": "^2.0.1",
    "codemirror": "^5.49.2",
    "highlight.js": "^9.16.2",
    "jquery": "^3.4.1",
    "jsbattle-docs": "^2.7.1",
    "jsbattle-engine": "^2.7.0",
    "jsbattle-react": "^2.7.1",
    "popper.js": "^1.16.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-highlight": "^0.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sillyname": "^0.1.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.0.5",
    "cpx": "^1.5.0",
    "cucumber": "^6.0.5",
    "eslint": "^6.7.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-vue": "^6.1.2",
    "http-server": "^0.11.1",
    "json-server": "^0.15.1",
    "npm-watch": "^0.6.0",
    "pm2": "^4.2.1",
    "puppeteer": "^2.0.0",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "gitHead": "b086d7f5befb0506cc4f1ef9a6450cf2591b9b7d"
}
