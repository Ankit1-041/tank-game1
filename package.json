{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "npm start --prefix=./packages/jsbattle",
    "stop": "npm stop --prefix=./packages/jsbattle",
    "restart": "npm restart --prefix=./packages/jsbattle",

    "lint": "lerna run lint --stream",
